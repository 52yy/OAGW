#include <stdio.h>
int main()
{
    char ch;
    int i,j,k,l;
    printf("Input 10 characters: ");
    i=0;
    j=0;
    k=0;
    l=0;
    while((ch=getchar())!='\n')
    {
        if(ch<='z'&&ch>='a'||ch<='Z'&&ch>='A')
            i++;
        else if(ch<='9'&&ch>='0'ï¼‰
            k++;
        else if(ch!=32)
            l++;
        else
            j++;
    }
    printf("letter=%d,",i);
    printf("blank=%d,",j);
    printf("digit=%d,",k);
    printf("other=%d",l);
    return 0;
}
