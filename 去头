#include <stdio.h>
#include <string.h>
int main()
{
    int i,j,k=0,len;
    char sz[81];
    printf("Enter a string:");
    gets(sz);
    len=strlen(sz);
    for(i=0;i<len;i++)
    {
        printf("%d:",i+1);
        for(j=0;j<i;j++)
            printf(" ");
        puts(sz+i);
    }
    return 0;
}
