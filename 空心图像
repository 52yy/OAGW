#include <stdio.h>
int main()
{
    int i,j,k,l,n,p;
    scanf("%d",&n);
    for(i=0;i<n;i++)
    {
        printf("*");
        if(i<n-1)
            printf(" ");
    }
    printf("\n");
    for(l=1;l<n;l++)
    {
        for(j=1;j<=l;j++)
        {
            printf(" ");
        }
        printf("*");
        for(k=0;k<2*(n-l)-3;k++)
        {
            printf(" ");
        }
        if(l!=n-1)
            printf("*");
        printf("\n");
    }
    return 0;
}
